{
  "AWSEBDockerrunVersion": 2,
	"volumes" : [
		{
			"name" : "dndtracker-client",
			"host": {
				"sourcePath": "/var/app/current/dndtracker-client"
			}
		}, 
		{
			"name" : "dndtracker-server",
			"host": {
				"sourcePath": "/var/app/current/dndtracker-server"
			}
		}, 
		{
			"name" : "mongodb",
			"host": {
				"sourcePath": "/var/app/current/mongodb"
			}
		}
	],
	"containerDefinitions" : [
		{
			"name" : "dndtracker-client",
			"image" : "mhart/alpine-node",
			"essential": false,
			"environment" : [
				{
					"name" : "Container",
					"value" : "Node"
				}
			],
			"memory": 128
		},
		{
			"name" : "dndtracker-server",
			"image" : "mhart/alpine-node",
			"essential": true,
			"environment" : [
				{
					"name" : "Container",
					"value" : "Node"
				}
			],
			"memory": 128,
			"links" : [
				"dndtracker-client",
				"mongodb"
			],
			"mountPoints": [
				{
					"sourceVolume": "dndtracker-client",
					"containerPath": "/var/log/dndtracker-client",
					"readOnly": true
				}, {
					"sourceVolume": "mongodb",
					"containerPath": "/var/log/mongodb"
				}
			]
		},
		{
			"name" : "mongodb",
			"image" : "mongo",
			"essential": true,
			"environment" : [
				{
					"name" : "Container",
					"value" : "Node"
				}
			],
			"memory": 128
		}
	]
}

